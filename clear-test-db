#!/usr/bin/env bash
set -euo pipefail

cd "$(dirname "$0")"
DB_NAME=${PROJMAN_DB:-projman-test.db}
# If PROJMAN_DB is a bare filename, place it under app/
case "$DB_NAME" in
  */*) DB_PATH="$DB_NAME" ;;
  *) DB_PATH="app/$DB_NAME" ;;
esac

if [ -f "$DB_PATH" ]; then
  rm -f "$DB_PATH"
  echo "Removed $DB_PATH"
else
  echo "No test DB to remove ($DB_PATH)"
fi
